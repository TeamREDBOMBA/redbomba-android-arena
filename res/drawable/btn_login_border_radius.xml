<?xml version="1.0" encoding="utf-8"?>
<!-- http://www.dibbus.com/2011/02/gradient-buttons-for-android/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <padding
                    android:left="10dp"
                    android:top="15dp"
                    android:right="10dp"
                    android:bottom="15dp" />
            <solid android:color="#552ecc71"/>
            <stroke android:width="1dip" android:color="#882ecc71"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                    android:left="10dp"
                    android:top="15dp"
                    android:right="10dp"
                    android:bottom="15dp" />
            <solid android:color="#332ecc71"/>
            <stroke android:width="1dip" android:color="#882ecc71"/>
        </shape>
    </item>
</selector>